@page
@model GeoBAM.Pages.POImanager.DeleteModel

@{
    //Titre de la page
    ViewData["Title"] = "Supprimer un point";
}

<h1>Supprimer</h1>

<h3>Etes-vous sur de vouloir supprimer ce point ?</h3>
<div>
    
    <hr />
    <!--Affcihage des détails du point avant suppresion-->
    <dl class="row">
        <dt class="col-sm-2">
            Type de données
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeoJSONData.DataType)
        </dd>
        <dt class="col-sm-2">
           Adresse
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeoJSONData.Address)
        </dd>
        <dt class="col-sm-2">
            Ville
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeoJSONData.City)
        </dd>
        <dt class="col-sm-2">
            Code postal
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeoJSONData.PostalCode)
        </dd>
        <dt class="col-sm-2">
            données GeoJson
        </dt>
        <dd class="col-sm-10">
            <pre>
            <code>@Html.DisplayFor(model => model.GeoJSONData.GeoJSONdata)</code>
</pre>
           
        </dd>
        <dt class="col-sm-2">
           catégorie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeoJSONData.Type)
        </dd>
        <dt class="col-sm-2">
            date de prélèvement
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeoJSONData.DatePrelevement)
        </dd>
        <dt class="col-sm-2">
            id. operateur
        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.GeoJSONData.ID_Operateur)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="GeoJSONData.pointID" />
        <input type="submit" style="background-color:orangered;" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">revenir à la liste</a>
    </form>
</div>
